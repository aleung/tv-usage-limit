<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:focusable="true"
    app:cardBackgroundColor="@color/selector_card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Restricted - Child"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvDailyLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily: 2h (Used: 30m)"
                android:textSize="13sp"
                android:textColor="@android:color/secondary_text_light" />

            <TextView
                android:id="@+id/tvSessionLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session: 45m (Used: 10m)"
                android:textSize="13sp"
                android:textColor="@android:color/secondary_text_light" />

            <TextView
                android:id="@+id/tvRestDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest: 15m"
                android:textSize="13sp"
                android:textColor="@android:color/secondary_text_light" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
